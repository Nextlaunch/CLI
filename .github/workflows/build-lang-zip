name: Create Archive
on: [push]
jobs:
  compress-languages:
    runs-on: ubuntu-latest
    steps:
    - uses: actions/checkout@master
    - name: Archive Release
      uses: thedoctor0/zip-release@master
      with:
        filename: 'languages.zip'
        directory: 'languages'
        exclusions: '*.git* /*node_modules/* .editorconfig'
